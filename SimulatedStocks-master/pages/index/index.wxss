.top{
  height:auto;
  display:flex;
  flex-direction:row;
  margin-top:20rpx;
}
.topItem{
  width:30%;
  margin-left:1.6%;
  margin-right:1.6%;
  background:#f4f4f9;
  border-radius:10rpx;
}
.stockName{
  font-size:35rpx;
  text-align:center;
  color:#121212;
  margin-top:10rpx;
}
.flexRow{
  display:flex;
  flex-direction:row;
  align-items:center;
  justify-content:center;
}
.triangle{
  height:30rpx;
  width:30rpx;
}
.right{
  position: absolute;
  right: 50rpx;
  width:50rpx;
  height:50rpx;
}
.heatBlock{
  width:100%;
  height:auto;
  background:#f0f5ff;
  display:flex;
  flex-direction:row;
  flex-wrap:wrap;
}
.belowItem{
  width:100%;
  height:60rpx;
  background:#f7f7f7;
  display:flex;
  flex-direction:row;
  align-items:center;
  margin-bottom: 2rpx;
}
.arrow{
  height:28rpx;
  width:28rpx;
  margin-left:30rpx;
  margin-right:25rpx;
}
.blockItem{
  width:33%;
  height:auto;
  margin-right:0.33%;
  margin-bottom:1rpx;
  background:#fff;
  display:flex;
  flex-direction:column;
}
.bg_grey{
  background: #efefef;
}
.list{
  width:100%;
  height:auto;
  display:flex;
  flex-direction:column;
  background:#fff;
}
.stockName{
  font-size:40rpx;
}