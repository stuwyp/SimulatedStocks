page {
  background: #f4f8fa;
}
#top {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: row;
  background: #fff;
}
#top .item25 {
  padding: 10rpx 0;
  width: 20%;
  height: auto;
  text-align: center;
}
#top .selected {
  border-bottom: 5rpx #f00 solid;
  color: #f00;
}
#top .not-selected {
  color: #000;
}
#position .profit-panel {
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  background: #fff;
  border-top: 1rpx solid #ececec;
  border-bottom: 1rpx solid #ececec;
}
#position .profit-panel .verticle-bar {
  width: 60rpx;
  height: 60rpx;
}
#position .profit-panel .total-profit-percent {
  font-size: 36rpx;
  color: #000;
}
#position .data-block {
  width: 100%;
  height: auto;
  background: #ccffff;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
#position .data-block .block-item {
  width: 33.3%;
  height: auto;
  background: #fff;
  display: flex;
  flex-direction: column;
}
#position .data-block .item-name {
  text-align: center;
  font-size: 32rpx;
  margin: 10rpx 0;
  color: #000;
}
#position .data-block .item-data {
  text-align: center;
  margin: 12rpx 0;
  font-size: 36rpx;
}
.buy-sale .panel {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: row;
  background: #fff;
}
.buy-sale .panel-left {
  width: 65%;
  height: 500rpx;
  display: flex;
  flex-direction: column;
}
.buy-sale .panel-left .code-input {
  width: 90%;
  margin: 20rpx 5% 0;
  height: 60rpx;
  border: 1rpx solid #f00;
  text-align: center;
  font-size: 30rpx;
  color: #000;
}
.buy-sale .panel-left .panel-flex {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 90%;
}
.buy-sale .panel-left .panel1 {
  margin: 20rpx 5% 0;
}
.buy-sale .panel-left .panel2 {
  margin: 0 5% 10rpx;
}
.buy-sale .panel-left .panel3 {
  margin: 0 5%;
}
.buy-sale .panel-left .icon60 {
  width: 80rpx;
  height: 60rpx;
  border: 1rpx solid #f00;
}
.buy-sale .panel-left .input {
  height: 60rpx;
  width: auto;
  text-align: center;
  border-top: 1rpx solid #f00;
  border-bottom: 1rpx solid #f00;
  font-size: 30rpx;
  color: #000;
}
.buy-sale .panel-left .middle-text {
  height: 50rpx;
  display: flex;
  align-items: center;
  flex-direction: row;
  margin: 0 5%;
}
.buy-sale .panel-left .none {
  flex: 1;
}
.buy-sale .panel-left .text-down {
  color: #00c853;
}
.buy-sale .panel-left .text-up {
  color: #f00;
}
.buy-sale .panel-left .text {
  font-size: 26rpx;
  line-height: 26rpx;
}
.buy-sale .panel-left .text-limit {
  padding-left: 16rpx;
}
.buy-sale .panel-left .text2 {
  color: #666;
  font-size: 25rpx;
}
.buy-sale .panel-left .text2-middle {
  color: #f00;
  padding: 0 5rpx;
}
.buy-sale .panel-left .choose {
  font-size: 30rpx;
  color: #000;
  width: 20%;
  margin-right: 6.6%;
  text-align: center;
  border: 1rpx solid #ccc;
  padding: 5rpx 0;
}
.buy-sale .panel-left .button {
  width: 90%;
  margin: 20rpx 5% 0;
  text-align: center;
  background: #ee0000;
  color: #fff;
  font-size: 35rpx;
  padding: 10rpx 0;
}
.buy-sale .panel-right {
  width: 35%;
  height: auto;
  display: flex;
  flex-direction: column;
}
.buy-sale .panel-right .right-item {
  display: flex;
  flex-direction: column;
  width: 90%;
  border: 1rpx solid #dcdcdc;
  height: auto;
}
.buy-sale .panel-right .sale {
  margin-top: 20rpx;
  border-bottom: 0;
}
.buy-sale .panel-right .right-row {
  display: flex;
  padding: 8rpx 0;
}
.buy-sale .panel-right .row-item {
  font-size: 25rpx;
  color: #000;
  width: 33%;
  text-align: center;
}
#query .search-item {
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  background: #fff;
  align-items: center;
}
#query .left-text {
  margin-left: 30rpx;
  font-size: 30rpx;
}
#query .right-img {
  width: 40rpx;
  height: 40rpx;
  right: 30rpx;
  position: absolute;
}
.flex-panel {
  margin-top: 20rpx;
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
}
.bottom-title {
  margin: 10rpx 0;
  display: flex;
  flex-direction: row;
  font-size: 32rpx;
}
.bottom-panel {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
}
.bottom-panel .center {
  margin: 32rpx 0;
  text-align: center;
  font-size: 32rpx;
}
.bottom-item {
  width: 100%;
  display: flex;
  border-bottom: 1rpx solid #f4f8fa;
  font-size: 30rpx;
}
.item {
  text-align: center;
  width: 25%;
  margin: 10rpx 0;
}
.bg-grey {
  background: #efefef;
}
.red {
  color: #f00;
}
.blue {
  color: #00f;
}
