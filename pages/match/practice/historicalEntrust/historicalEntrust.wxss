  width: 25%;
  display: flex;
  flex-direction: column;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}

.icon60 {
  width: 60rpx;
  height: 60rpx;
  border: none;
}

.top {
  display: flex;
  flex-direction: row;
