/* pages/stock/index_detail/index_detail.wxss */
.top {
  width: 100%;
  height: 150rpx;
  display: flex;
  margin: 20rpx 0;
  border-bottom: 2rpx solid #efefef;
}
.top-item-22 {
  width: 22%;
  height: 100%;
  display: flex;
  flex-direction: column;
  text-align: center;
}
.top-item-34 {
  width: 34%;
  height: 100%;
  display: flex;
  flex-direction: column;
  text-align: center;
}
.tab {
  background: #fff;
  height: 100rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.normal {
  font-size: 35rpx;
  color: #c0c0c0;
  text-align: center;
  width: 25%;
}
.selected {
  font-size: 35rpx;
  font-weight: bold;
  color: #2d8cf0;
  text-align: center;
  width: 25%;
}
.border {
  padding-bottom: 15rpx;
  border-bottom: 5rpx solid #2d8cf0;
}
.bg-grey {
  background: #efefef;
}
.img {
  margin: 50rpx 0;
}
.like {
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 1rpx solid #ccc;
  padding: 20rpx;
}
