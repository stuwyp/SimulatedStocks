/* pages/stock/index_detail/index_detail.wxss */
.top{
  width: 100%;
  height:100rpx;
  display: flex;
  margin-top: 20rpx;
  border-bottom: 2rpx solid #efefef;
}
.topItem{
  width: 25%;
  height: 100%;
  display: flex;
  flex-direction: column;
  text-align: center;
}

.tab{
  background: #fff;
  height:100rpx;
  width:100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.normal{
  font-size: 35rpx;
  color:#c0c0c0;
  text-align:center;
  width:25%;
}
.selected{
  font-size: 35rpx;
  font-weight: bold;
  color: #2d8cf0;
  text-align:center;
  width:25%;
}
.border{
  padding-bottom:15rpx;
  border-bottom: 5rpx solid #2d8cf0;
}
.bg_grey{
  background: #efefef;
}