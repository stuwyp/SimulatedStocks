.top {
  height: auto;
  display: flex;
  flex-direction: row;
  margin: 20rpx 0;
  padding: 0.5%;
}
.top .top-item-22 {
  width: 30%;
  margin-left: 1.5%;
  margin-right: 1.5%;
  background: #f7f7f7;
  border-radius: 10rpx;
}
.top .top-item-22 .stock-name {
  font-size: 38rpx;
  text-align: center;
  color: #121212;
  margin-top: 10rpx;
}
.top .top-item-22 .stock-price {
  font-size: 38rpx;
}
.top .top-item-22 .flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin: 15rpx 0;
}
.top .top-item-22 .flex-row .triangle {
  height: 30rpx;
  width: 30rpx;
}
.top .top-item-22 .flex-row .item-font {
  font-size: 28rpx;
  padding: 0 10rpx;
}
.main .below-item {
  width: 100%;
  height: 60rpx;
  background: #f7f7f7;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 2rpx;
}
.main .below-item .arrow {
  height: 28rpx;
  width: 28rpx;
  margin-left: 30rpx;
  margin-right: 25rpx;
}
.main .below-item .block-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #0c5dff;
}
.main .below-item .block-right {
  position: absolute;
  right: 50rpx;
  width: 50rpx;
  height: 50rpx;
}
.main .heat-block {
  width: 100%;
  height: auto;
  background: #f0f5ff;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.main .list {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  background: #fff;
}
.main .block-item {
  width: 33%;
  height: auto;
  margin-right: 0.33%;
  margin-bottom: 1rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
}
.main .block-item .item {
  text-align: center;
}
.main .block-item .item-name {
  font-size: 34rpx;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
  color: #000;
}
.main .block-item .item-percent {
  margin-bottom: 5rpx;
  font-size: 35rpx;
  color: #f00;
}
.main .block-item .item-heat-stock {
  margin-bottom: 5rpx;
  font-size: 25rpx;
  color: #000;
}
.main .block-item .item-stock-percent {
  margin-bottom: 20rpx;
  font-size: 25rpx;
  color: #000;
}
.red {
  color: #f00;
}
.green {
  color: #00c853;
}
.bg-grey {
  background: #efefef;
}
