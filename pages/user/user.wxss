page {
  background: #f6f8f8;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 100rpx;
}
.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #aaa;
  line-height: 60rpx;
  margin-bottom: 50rpx;
}
.login_button {
  width: 100%;
  height: 500rpx;
  text-align: center;
  line-height: 500rpx;
  color: #999;
  border-radius: 0;
}
.login_button:after {
  border-radius: 0;
  border: 0;
}
.item {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  background: #fff;
  align-items: center;
  margin-bottom: 4rpx;
}
.bg-grey {
  background: #efefef;
}
.img {
  width: 40rpx;
  height: 40rpx;
  margin-left: 50rpx;
}
.item-name {
  margin-left: 30rpx;
  font-size: 30rpx;
  font-weight: bold;
}
.arrow {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 30rpx;
}
